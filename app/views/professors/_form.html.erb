<div class="page-header">
  <%= simple_form_for(@professor) do |f| %>
      </div>
      <% if @professor.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @professor.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label "Nome" %><br />
        <%= f.input :name, label: false %>


        <%= f.label "Matricula" %><br />
        <%= f.input :matricula, label: false %>

        <%= f.label "Username" %><br />
        <%= f.input :username, label: false %>

        <%= f.label "Senha" %><br />
        <%= f.input :password, label: false %>

        <%= f.label "Confirmação de Senha" %><br />
        <%= f.input :password_confirmation, label: false %>

      </div>
      <div class="actions">
        <%=link_to raw("<i class=\"icon-white icon-arrow-left\"> Voltar </i>"),
                   professors_path ,
                   class: "btn  btn-warning"%>
        <%= button_tag :class => 'btn-success btn' do %>
            <i class='fa fa-user'></i> Criar Professor
        <% end %>

        </ul>
      </div>

  <% end %>
