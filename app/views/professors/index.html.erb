<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>Lista de Professores</h1>
      <%= render partial: "shared/navbar_collapsible"%>

      <div align="right" >
        <%=link_to raw("<i class=\"fa fa-user\"> Criar Professor </i>"),
                   new_professor_path,
                   class: "btn btn-success  btn-small"%>
      </div>
    </div>
    <table>
      <tr>
        <th>Nome</th>
        <th>Matr√≠cula</th>
        <th></th>
        <th></th>
      </tr>

      <% @professors.each do |professor| %>
          <tr>
            <td><%= professor.name %></td>
            <td><%= professor.matricula %> </td>
            <td><%= link_to raw("<i class=\"fa fa-pencil-square-o\"> Editar </i>"),
                            edit_professor_path(professor),
                            class: "btn btn-small btn-primary",
                            method: :get %></td>
            <td><%= link_to raw("<i class=\"fa fa-trash-o\"> Deletar </i>"),
                            professor,
                            class: "btn btn-small btn-danger",
                            method: :delete, data: { confirm: 'Tem certeza que deseja excluir?'} %></td></td>
          </tr>
      <% end %>
    </table>

    <br />
  </div>
</div>
