<div class="container">
  <div class="row">
    <div class="page-header">

      <h1>Tipos de Atendimentos</h1>
      <%= render partial: "shared/navbar_collapsible"%>
      <div align="right" >

        <%=link_to raw("<i class=\"fa fa-plus-circle\"> Criar Tipo de Atendimento </i>"),
                   new_type_path,
                   class: "btn btn-success  btn-small"%>
      </div>
    </div>



    <div id='registros'>
      <table id="types" class="display">


        <thead>
      <tr>
        <th>Nome</th>
        <th></th>
        <%if can? :delete, Type%>
        <th></th>

      </tr>
      <% end %>
    </thead>

   <tbody>


      <% @types.each do |type| %>
          <tr>
            <td><%= type.try(:name) %></td>
            <%if can? :edit, Type%>
            <td><%= bs_button_to  raw("<i class=\"fa fa-pencil-square-o\"></i>"),
                                  edit_type_path(type),tooltip: "Editar Tipo de Atendimento",
                                  class: "btn btn-large btn-primary",
                                  method: :get %></td>

             <%end%>
            <%if can? :delete, Type%>
            <td><%= bs_button_to raw("<i class=\"fa fa-trash-o\"></i>"),
                                 type, tooltip: "Excluir Tipo de Atendimento",
                                 class: "btn btn-large btn-danger",
                                 method: :delete, data: {confirm: 'Tem certeza que deseja excluir?'} %></td>


            <%end%>

          </tr>

      <% end %>
   </tbody>
    </table>

      </div>
    <br/>

  </div>
</div>