<%= form_for(@type) do |f| %>
  <% if @type.errors.any? %>
  <div class="alert alert-danger">
   <!-- <div id="error_explanation">
      <h2><%= pluralize(@type.errors.count, "Erro") %> Cadastro de Tipo de Atendimento invalido:</h2>
  -->
      <ul>
      <% @type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nome" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Local" %><br />
    <%= f.select :place_id,  Place.all.collect {|p| [p.name, p.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
