<%= simple_form_for(@type) do |f| %>
  <% if @type.errors.any? %>
  <div class="alert alert-danger">
   <!-- <div id="error_explanation">
      <h2><%= pluralize(@type.errors.count, "Erro") %> Cadastro de Tipo de Atendimento invalido:</h2>
  -->
      <ul>
      <% @type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name ,"Nome" %><br />
    <%= f.input :name, :label => false %>
    <%= f.label :places, "Locais de Atendimento" %><br />
    <%= f.association :places, :as => :check_boxes, :label => false %>

  </div>
 
  <div class="actions">
  <%=link_to raw("<i class=\"icon-white icon-arrow-left\"> Voltar </i>"), 
          types_path , 
          class: "btn  btn-warning"%>
    <%= f.submit  "Criar Tipo de Atendimento" ,:class => 'btn-success btn'  %>
    
  </ul>
</div>

<% end %>
