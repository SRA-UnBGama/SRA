<%= simple_form_for(type) do |f| %>
  <% if type.errors.any? %>
  <div class="alert alert-danger">
   <!-- <div id="error_explanation">
      <h2><%= pluralize(type.errors.count, "Erro") %> Cadastro de Tipo de Atendimento invalido:</h2>
  -->
      <ul>
      <% type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name ,"Nome" %><br />
    <%= f.input :name, :label => false %>
    <%= f.label :places, "Locais de Atendimento" %><br />
    <%= f.association :places, :as => :check_boxes, :label => false %>

  </div>

  <div class="actions">
  <%=link_to raw("<i class=\"icon-white icon-arrow-left\"> Voltar </i>"),
          types_path ,
          class: "btn  btn-warning"%>
    <%= button_tag :class => 'btn-success btn' , :id => 'criar-tipo' do %>
        <i class='fa fa-plus-circle'></i> Criar Tipo de Atendimento
    <% end %>

    </ul>
  </div>

<% end %>
