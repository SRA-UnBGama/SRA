<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>Lista de Atendimentos</h1>

      <div align="right">
        <%= link_to raw("<i class=\"icon-white icon-plus\"> Criar Atendimento </i>"),
                    new_atendimento_path,
                    class: "btn btn-success  btn-small" %>
      </div>

    </div>


    <div id='registros'>
      <table>
        <tr>
          <th>Nome</th>
          <th>Data</th>
          <th>PÃºblico Alvo</th>
          <th>Local de Atendimento</th>
          <th>Tipo de Atendimento</th>
          <th></th>
          <th></th>


          <% @atendimentos.each do |atendimento| %>
            <tr>
              <td><%= atendimento.user.try(:name) %></td>
              <td><%= l(atendimento.try(:data), :format => :long) if atendimento.data %></td>
              <td><%= atendimento.user.try(:as_user_type) %></td>
              <td><%= atendimento.place.try(:name) %></td>
              <td><%= atendimento.type.try(:name) %></td>
              <td><%= li<td><%= link_to raw("<i class=\"fa fa-pencil-square-o\"> Editar </i>"),
                              edit_atendimento_path(atendimento),
                              class: "btn btn-small btn-primary",
                              method: :get %></td>
              <td><%= link_to raw("<i class=\"icon-white icon-trash\"> Deletar </i>"),
                              atendimento,
                              class: "btn btn-small btn-danger",
                              method: :delete, data: {confirm: 'Tem certeza que deseja excluir?'} %></td>
              </td>
            </tr>

        <% end %>

      </table>

    </div>

    <br/>

  </div>
</div>

