<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>Alteração de Perfil</h1>
      <%= render partial: "shared/navbar_collapsible"%>


    </div>


    <div id='registros'>
      <table id="perfil" class="display">

        <thead>

        <tr>
          <th>Nome</th>
          <th>Papel</th>
          <th>Selecionar Perfil</th>
              </tr>
          </thead>
        <tbody>
        <% @users.each do |user| %>
              <tr>
                <td><%= user.try(:name) %></td>
                <td><%= l(atendimento.try(:data), :format => :long) if atendimento.data %></td>
                <%  if atendimento.user.has_role? :student %>
                    <td><%="Estudante"%></td>
                <% elsif atendimento.user.has_role? :administrative %>
                    <td><%="Servidor Administrativo"%></td>

                <% elsif atendimento.user.has_role? :professor %>
                    <td><%="Professor"%></td>


                <% end %>

                <td><%= atendimento.place.try(:name) %></td>
                <td><%= atendimento.type.try(:name) %></td>
                <%if can? :edit, Atendimento%>
                   <td><%= bs_button_to  raw("<i class=\"fa fa-pencil-square-o\"></i>"),
                                    edit_atendimento_path(atendimento),tooltip: "Editar Atendimento",
                                    class: "btn btn-large btn-primary",
                                    method: :get %></td>

                <%end%>
                <%if can? :delete, Atendimento%>
                    <td><%= bs_button_to raw("<i class=\"fa fa-trash-o\"></i>"),
                                         atendimento, tooltip: "Excluir Atendimento",
                                         class: "btn btn-large btn-danger",
                                         method: :delete, data: {confirm: 'Tem certeza que deseja excluir?'} %></td>
                <%end%>

              </tr>

          <% end %>
        </tbody>
          </table>

    </div>

    <br/>

  </div>
</div>

