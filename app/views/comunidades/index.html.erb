<%= render "navbar" %>

<div class="container">
<div class="row">
<div class="page-header">

<h1>Lista de Pessoas Externas</h1>

<div align="right" >
<%=link_to raw("<i class=\"icon-white icon-plus\"> Criar Pessoa </i>"), 
          new_comunidade_path, 
          class: "btn btn-success  btn-small"%>
</div>
</div>

<table>
  <tr>
    <th>Nome</th>
    <th>CPF</th>
    <th></th>
    <th></th>
  </tr>
<% @comunidades.each do |comunidade| %>
  <tr>
    <td><%= comunidade.name %></td>
    <td><%= comunidade.identificacao %> </td>
    <td><%= link_to raw("<i class=\"icon-white icon-pencil\"> Editar </i>"), 
          edit_comunidade_path(comunidade), 
          class: "btn btn-small btn-primary",
          method: :get %></td>
    <td><%= link_to raw("<i class=\"icon-white icon-trash\"> Deletar </i>"), 
          comunidade, 
          class: "btn btn-small btn-danger",
          method: :delete, data: { confirm: 'Tem certeza que deseja excluir?'} %></td></td>
  </tr>
<% end %>
</table>

<br />
</div>
</div>
