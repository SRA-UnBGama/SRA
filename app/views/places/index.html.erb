<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>Lista de Locais de Atendimentos</h1>
      <%= render partial: "shared/navbar_collapsible"%>

      <div align="right" >
        <%=link_to raw("<i class=\"fa fa-map-marker\"> Criar Local de Atendimento </i>"),
                   new_place_path,
                   class: "btn btn-success  btn-small"%>
      </div>
    </div>



    <div id='registros'>
      <table id="places" class="display">
        <thead>
        <tr>
        <th>Nome</th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @places.each do |place| %>
          <tr>
            <td><%= place.try(:name) %></td>
            <%if can? :edit, Place%>
            <td><%= bs_button_to  raw("<i class=\"fa fa-pencil-square-o\"></i>"),
                                  edit_place_path(place),tooltip: "Editar Local de Atendimento",
                                  class: "btn btn-large btn-primary",
                                  method: :get %></td>
            <%end%>


            <%if can? :delete, Place%>
                <td><%= bs_button_to raw("<i class=\"fa fa-trash-o\"></i>"),
                                     place, tooltip: "Excluir Local de Atendimento",
                                     class: "btn btn-large btn-danger",
                                     method: :delete, data: {confirm: 'Tem certeza que deseja excluir?'} %></td>
            <%end%>


          </tr>
      <% end %>
      </tbody>

    </table>
  </div>
    <br/>
  </div>
</div>
